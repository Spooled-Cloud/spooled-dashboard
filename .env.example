# =============================================================================
# Spooled Dashboard - Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment.

# -----------------------------------------------------------------------------
# API Configuration (Required)
# -----------------------------------------------------------------------------

# Backend API URL
PUBLIC_API_URL=http://localhost:3000

# WebSocket URL for real-time updates
PUBLIC_WS_URL=ws://localhost:3000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

PUBLIC_ENABLE_WORKFLOWS=true
PUBLIC_ENABLE_SCHEDULES=true

# -----------------------------------------------------------------------------
# Error Tracking (Sentry)
# -----------------------------------------------------------------------------

# Get DSN from https://sentry.io - leave empty to disable
PUBLIC_SENTRY_DSN=
PUBLIC_SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

HOST=0.0.0.0
PORT=4321
NODE_ENV=development

# -----------------------------------------------------------------------------
# Production Only (docker-compose.prod.yml)
# -----------------------------------------------------------------------------

# Cloudflare Tunnel Token (from Zero Trust dashboard)
# CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token

# Override Docker image
# DASHBOARD_IMAGE=ghcr.io/spooled-cloud/spooled-dashboard:v1.0.0
