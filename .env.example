# =============================================================================
# SPOOLED DASHBOARD - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in the values
# For production, use secure values and don't commit .env to git
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Host to bind (default: 0.0.0.0)
HOST=0.0.0.0

# Port to listen on (default: 4321)
PORT=4321

# Environment: development, production
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Spooled Backend API URL
PUBLIC_API_URL=http://localhost:8080

# WebSocket URL for real-time updates
PUBLIC_WS_URL=ws://localhost:8080

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable workflow features
PUBLIC_ENABLE_WORKFLOWS=true

# Enable schedule features
PUBLIC_ENABLE_SCHEDULES=true

# =============================================================================
# ERROR TRACKING (Sentry - Optional)
# =============================================================================

# Sentry DSN for error tracking
PUBLIC_SENTRY_DSN=

# Sentry environment tag
PUBLIC_SENTRY_ENVIRONMENT=development

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Enable analytics tracking
PUBLIC_ENABLE_ANALYTICS=false

# =============================================================================
# CLOUDFLARE TUNNEL (Production)
# =============================================================================

# Cloudflare tunnel token (from Zero Trust dashboard)
CLOUDFLARE_TUNNEL_TOKEN=

# =============================================================================
# DOCKER IMAGE (Production)
# =============================================================================

# Docker image to use (for docker-compose.prod.yml)
DASHBOARD_IMAGE=ghcr.io/spooled-cloud/spooled-dashboard:latest
